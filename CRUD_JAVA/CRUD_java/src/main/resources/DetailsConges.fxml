<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="686.0" prefWidth="904.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.DetailsCongesController">

    <!-- Titre principal -->
    <Text layoutX="342.0" layoutY="105.0" styleClass="title-text" text="📋 Détails du Congé">
      <font>
         <Font size="25.0" />
      </font></Text>

    <!-- Formulaire des détails -->
    <Label layoutX="223.0" layoutY="174.0" styleClass="form-label" text="📑 Type :" />
    <TextField fx:id="ResultatType" layoutX="533.0" layoutY="166.0" styleClass="text-field" />

    <Label layoutX="223.0" layoutY="234.0" styleClass="form-label" text="📅 Date Début (yyyy-MM-dd) :" />
    <TextField fx:id="ResultatDateDebut" layoutX="533.0" layoutY="226.0" styleClass="text-field" />

    <Label layoutX="223.0" layoutY="294.0" styleClass="form-label" text="📆 Date Fin (yyyy-MM-dd) :" />
    <TextField fx:id="ResultatDateFin" layoutX="533.0" layoutY="286.0" styleClass="text-field" />

    <Label layoutX="223.0" layoutY="354.0" styleClass="form-label" text="👤 ID Employé :" />
    <TextField fx:id="ResultatEmployeeID" editable="false" layoutX="533.0" layoutY="346.0" styleClass="text-field" />

    <Label layoutX="223.0" layoutY="414.0" styleClass="form-label" text="🔍 Statut :" />
    <TextField fx:id="ResultatStatut" layoutX="533.0" layoutY="406.0" styleClass="text-field" />

    <!-- Boutons d'action -->
    <Button layoutX="210.0" layoutY="516.0" onAction="#ButtonActionModifier" styleClass="button" text="✏️ Modifier" />
    <Button layoutX="360.0" layoutY="516.0" onAction="#ButtonActionSupprimer" styleClass="button-exit" text="🗑️ Supprimer" />


</AnchorPane>
