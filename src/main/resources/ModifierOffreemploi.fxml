<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.recrutement.controllers.ModifierOffreEmploiController">
    <children>
        <!-- Titre principal -->
        <Text layoutX="200.0" layoutY="50.0" styleClass="title-text" text="✏️ Modifier Offre d'Emploi">
            <font>
                <Font size="25.0" />
            </font>
        </Text>

        <!-- Formulaire de modification -->
        <Label layoutX="43.0" layoutY="118.0" styleClass="form-label" text="📑 Titre :" />
        <TextField fx:id="txtTitre" layoutX="160.0" layoutY="113.0" styleClass="text-field" />

        <Label layoutX="43.0" layoutY="162.0" styleClass="form-label" text="📝 Description :" />
        <TextField fx:id="txtDescription" layoutX="160.0" layoutY="157.0" styleClass="text-field" />

        <Label layoutX="43.0" layoutY="225.0" styleClass="form-label" text="📅 Date de Publication :" />
        <DatePicker fx:id="datePickerPublication" layoutX="208.0" layoutY="212.0" styleClass="date-picker" />

        <Label layoutX="43.0" layoutY="286.0" styleClass="form-label" text="🔲 Statut :" />
        <ComboBox fx:id="cmbStatut" layoutX="160.0" layoutY="277.0" prefWidth="200.0" promptText="DISPONIBLE" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="DISPONIBLE" />
                    <String fx:value="INDISPONIBLE" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Boutons d'action -->
        <Button fx:id="btnModifier" layoutX="420.0" layoutY="100.0" onAction="#handleModifier" styleClass="button" text="✅ Modifier" />
        <Button fx:id="btnAnnuler" layoutX="420.0" layoutY="160.0" onAction="#handleAnnuler" styleClass="button-exit" text="❌ Annuler" />
    </children>
</AnchorPane>
