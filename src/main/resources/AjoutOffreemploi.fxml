<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AjoutOffreemploi">
    <children>
        <!-- Titre principal -->
        <Text layoutX="280.0" layoutY="60.0" styleClass="title-text" text="Ajouter une Offre d'Emploi" underline="true">
            <font>
                <Font size="25.0" />
            </font>
        </Text>

        <!-- Formulaire de saisie -->
        <Label layoutX="100.0" layoutY="120.0" styleClass="form-label" text="📑 Titre :" />
        <TextField fx:id="txtTitre" layoutX="250.0" layoutY="115.0" styleClass="text-field" />

        <Label layoutX="100.0" layoutY="160.0" styleClass="form-label" text="📝 Description :" />
        <TextField fx:id="txtDescription" layoutX="250.0" layoutY="155.0" styleClass="text-field" />

        <Label layoutX="100.0" layoutY="200.0" styleClass="form-label" text="🏢 Adresse :" />
        <TextField fx:id="txtAdresse" layoutX="250.0" layoutY="195.0" styleClass="text-field" />

        <Label layoutX="100.0" layoutY="240.0" styleClass="form-label" text="📅 Date de Publication :" />
        <DatePicker fx:id="datePicker" layoutX="265.0" layoutY="235.0" prefWidth="200.0" styleClass="date-picker" />

        <Label layoutX="100.0" layoutY="280.0" styleClass="form-label" text="🔲 Statut :" />
        <ComboBox fx:id="cmbStatut" layoutX="238.0" layoutY="275.0" prefWidth="200.0" promptText="DISPONIBLE" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="DISPONIBLE" />
                    <String fx:value="INDISPONIBLE" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Boutons d'action -->
        <Button layoutX="650.0" layoutY="115.0" onAction="#AddOffreemploi" styleClass="button" text="➕ Ajouter" />
        <Button layoutX="650.0" layoutY="515.0" onAction="#handleRetour" styleClass="button-exit" text="🔙 Retour" />
        <Button layoutX="650.0" layoutY="165.0" onAction="#AnnulerAjout" styleClass="button" text="❌ Annuler" />
    </children>
</AnchorPane>
