<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.recrutement.controllers.AfficheCV">
   <children>
      <Label layoutX="220.0" layoutY="50.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Liste des CVs" />
      <ListView fx:id="listViewCVs" layoutX="50.0" layoutY="100.0" prefWidth="500.0" prefHeight="200.0" />
      <Button fx:id="btnModifier" layoutX="50.0" layoutY="320.0" text="Modifier" onAction="#handleModifier"/>
      <Button fx:id="btnSupprimer" layoutX="150.0" layoutY="320.0" text="Supprimer" onAction="#handleSupprimer"/>
      <Button fx:id="btnRetour" layoutX="250.0" layoutY="320.0" text="Retour" onAction="#handleRetour"/>

      <!-- Button to sort by name -->
      <Button fx:id="btnTrier" layoutX="500.0" layoutY="50.0" text="Trier par Nom" onAction="#handleTrier"/>

      <!-- Search TextField and Button -->
      <TextField fx:id="txtRecherche" layoutX="50.0" layoutY="20.0" promptText="Rechercher par nom" />
      <Button fx:id="btnRechercher" layoutX="200.0" layoutY="20.0" text="Rechercher" onAction="#handleRechercher"/>
   </children>
</AnchorPane>

