<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #F4E7FD, #F4E7FF);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.RegistreUserController">
    
    <!-- Titre principal -->
    <Text style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #6d219c; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0.5, 0, 2);" text="📝 Créer un compte" />
    
    <!-- Conteneur principal du formulaire -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 4);">
        
        <!-- Ligne 1 - Prénom et Nom -->
        <HBox alignment="CENTER" spacing="20">
            <VBox spacing="5">
                <Label text="Prénom" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <TextField fx:id="txtnom1" prefWidth="250" prefHeight="40" promptText="Votre prénom" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Nom" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <TextField fx:id="txtnom2" prefWidth="250" prefHeight="40" promptText="Votre nom" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
        </HBox>
        
        <!-- Ligne 2 - Email et Téléphone -->
        <HBox alignment="CENTER" spacing="20">
            <VBox spacing="5">
                <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <TextField fx:id="txtemail" prefWidth="250" prefHeight="40" promptText="votre@email.com" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Téléphone" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <TextField fx:id="txtnumT" prefWidth="250" prefHeight="40" promptText="+216 XX XXX XXX" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
        </HBox>
        
        <!-- Ligne 3 - Mot de passe et Confirmation -->
        <HBox alignment="CENTER" spacing="20">
            <VBox spacing="5">
                <Label text="Mot de passe" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <PasswordField fx:id="passwordField" prefWidth="250" prefHeight="40" promptText="••••••••" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
            <VBox spacing="5">
                <Label text="Confirmer mot de passe" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <PasswordField fx:id="passwordField2" prefWidth="250" prefHeight="40" promptText="••••••••" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
            </VBox>
        </HBox>
        
        <!-- Ligne 4 - Image de profil -->
        <HBox alignment="CENTER" spacing="20">
            <VBox spacing="5" alignment="CENTER">
                <Label text="Photo de profil" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <ImageView fx:id="imageview" fitHeight="100.0" fitWidth="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 50;" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@user-avatar.png" />
                    </image>
                </ImageView>
            </VBox>
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ajouter une image de profil" style="-fx-font-weight: bold; -fx-text-fill: #5c1e5f;" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnChoisir" mnemonicParsing="false" onAction="#importer" text="Parcourir..." style="-fx-background-color: linear-gradient(to right, #6d219c, #9e5ac3); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 20;" />
                    <TextField fx:id="urlTF" prefWidth="300" prefHeight="40" promptText="Ou coller une URL d'image" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9e5ac3; -fx-padding: 10;" />
                </HBox>
                <Label text="Formats acceptés: JPG, PNG, GIF (max. 5MB)" style="-fx-font-size: 11px; -fx-text-fill: #888;" />
            </VBox>
        </HBox>
        
        <!-- Bouton de soumission -->
        <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#ajouter" text="Créer mon compte" style="-fx-background-color: linear-gradient(to right, #6d219c, #9e5ac3); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 12 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        
        <!-- Lien de retour -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Déjà inscrit ?" style="-fx-text-fill: #666;" />
            <Button text="Se connecter" style="-fx-background-color: transparent; -fx-text-fill: #6d219c; -fx-underline: true; -fx-padding: 0; -fx-cursor: hand;" onAction="#retourLogin" />
        </HBox>
    </VBox>
</VBox>
