<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="685.0" prefWidth="897.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AfficheFavorisController">

    <Label layoutX="-6.0" prefHeight="687.0" prefWidth="254.0" style="-fx-background-color: #F4E7FF;" />

    <!-- Titre -->
    <Text layoutX="-3.0" layoutY="74.0" styleClass="title-text" text="Liste des Favoris" textAlignment="CENTER" wrappingWidth="254.4">
        <font>
            <Font size="25.0" />
        </font>
    </Text>

    <!-- TableView pour afficher les offres favoris -->
    <TableView fx:id="tableViewFavoris" layoutX="34.0" layoutY="155.0" prefHeight="400.0" prefWidth="799.0" styleClass="table-view">
        <columns>
            <TableColumn fx:id="colTitre" prefWidth="159.0" text="Titre" />
            <TableColumn fx:id="colDescription" prefWidth="256.0" text="Description" />
            <TableColumn fx:id="colDatePublication" prefWidth="246.0" text="Date Publication" />
            <TableColumn fx:id="colStatut" prefWidth="59.0" text="Statut" />
        </columns>
    </TableView>

    <!-- Bouton Retour -->
    <Button layoutX="695.0" layoutY="598.0" onAction="#handleRetour" prefHeight="44.0" prefWidth="203.0" styleClass="button-exit" text="Retour">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/home.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>