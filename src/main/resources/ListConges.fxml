<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="685.0" prefWidth="897.0" styleClass="root" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.ListCongesController">

    <!-- Titre principal -->
    <Text layoutX="462.0" layoutY="105.0" styleClass="title-text" text="Gestion des Congés">
        <font>
            <Font size="25.0" />
        </font>
    </Text>

    <!-- Tableau de la liste des congés -->
    <TableView fx:id="TableViewListConges" layoutX="300.0" layoutY="233.0" prefHeight="370.0" prefWidth="554.0" styleClass="table-view">
        <columns>
            <TableColumn fx:id="ColumnId" prefWidth="42.4" text="ID" />
            <TableColumn fx:id="ColumnType" prefWidth="60.0" text="Type" />
            <TableColumn fx:id="ColumnDateDebut" prefWidth="101.6" text="Date Début" />
            <TableColumn fx:id="ColumnDateFin" prefWidth="100.0" text="Date Fin" />
            <TableColumn fx:id="ColumnEmployeeId" prefWidth="112.0" text="ID Employé" />
            <TableColumn fx:id="ColumnStatut" prefWidth="89.6" text="Statut" />
        </columns>
    </TableView>

    <Label layoutX="-5.0" prefHeight="697.0" prefWidth="263.0" style="-fx-background-color: #F4E7FF;" />

    <!-- Champ de recherche -->
    <TextField fx:id="searchField" layoutX="630.0" layoutY="148.0" prefHeight="35.0" prefWidth="300.0"
               promptText="🔍 Rechercher..."
               style="-fx-background-color: #ffffff; -fx-border-color: #B7C3D7; -fx-border-radius: 2em;" />

    <!-- Boutons d'action -->
    <Button layoutX="42.0" layoutY="318.0" onAction="#ButtonActionAjouterConges" prefHeight="40.0" prefWidth="175.0" styleClass="button" text="➕ Ajouter Congé" />

    <Button layoutX="40.0" layoutY="493.0" onAction="#ButtonActionRetourMenu" styleClass="button-exit" text="🔙 Retour au Menu" />

    <ImageView fitHeight="134.0" fitWidth="131.0" layoutX="66.0" layoutY="75.0">
        <image>
            <Image url="@images/jimmy-fallon.png" />
        </image>
    </ImageView>


    <!-- Boutons de tri à gauche -->
    <Button layoutX="300.0" layoutY="148.0" prefHeight="35.0" prefWidth="150.0"
            onAction="#ButtonActionTrierCroissant" text="⬆️ Trier ↑"
            style="-fx-background-color: #E0F7FA; -fx-border-color: #00796B; -fx-border-radius: 2em;" />

    <Button layoutX="460.0" layoutY="148.0" prefHeight="35.0" prefWidth="150.0"
            onAction="#ButtonActionTrierDecroissant" text="⬇️ Trier ↓"
            style="-fx-background-color: #FFEBEE; -fx-border-color: #C62828; -fx-border-radius: 2em;" />


    <!-- Bouton pour les statistiques -->
    <Button layoutX="22.0" layoutY="400.0" onAction="#ButtonActionStatistiques"
            prefHeight="44.0" prefWidth="203.0" styleClass="button"
            text="📊 Voir Statistiques">
    </Button>


</AnchorPane>
