<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="699.0" prefWidth="895.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.AjouterBienetreController">

    <!-- 🌿 Titre principal -->
    <Text layoutX="316.0" layoutY="113.0" styleClass="title-text" text="🌿 Ajouter un Bien-être">
      <font>
         <Font size="24.0" />
      </font></Text>

    <!-- 📋 Formulaire de saisie -->
    <Label layoutX="220.0" layoutY="172.0" styleClass="form-label" text="🏷️ Nom :" />
    <TextField fx:id="TextFieldNom" layoutX="450.0" layoutY="163.0" styleClass="text-field" />

    <Label layoutX="220.0" layoutY="232.0" styleClass="form-label" text="📝 Avis (Review) :" />
    <TextField fx:id="TextFieldReview" layoutX="450.0" layoutY="223.0" styleClass="text-field" />

    <Label layoutX="220.0" layoutY="292.0" styleClass="form-label" text="⭐ taux :" />
    <TextField fx:id="TextFieldRate" layoutX="450.0" layoutY="283.0" styleClass="text-field" />

    <!-- ⚙️ Boutons d'action -->
    <Button layoutX="182.0" layoutY="437.0" onAction="#ButtonActionAjouter" styleClass="button" text="➕ Ajouter Bien-être" />
    <Button layoutX="516.0" layoutY="437.0" onAction="#ButtonActionRetourMenu" styleClass="button-exit" text="🔙 Retour au Menu" />

</AnchorPane>
