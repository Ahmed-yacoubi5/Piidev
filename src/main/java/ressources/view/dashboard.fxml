<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="695.0" prefWidth="1231.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.gui.dashboardController">
    <!-- Sidebar on the left -->
    <left>
        <AnchorPane prefWidth="200.0" style="-fx-background-color: #6a0dad;"> <!-- Sidebar color -->
            <fx:include source="sidebar.fxml" />
        </AnchorPane>
    </left>

    <!-- Main Content (Table and Buttons) -->
    <center>
        <AnchorPane prefHeight="695.0" prefWidth="816.0" style="-fx-background-color: #222;"> <!-- Dark background for main content -->
            <!-- Header -->
            <HBox prefHeight="55.0" prefWidth="700.0" style="-fx-background-color: #222; -fx-text-fill: white;" />

            <!-- "User" Label above Table -->
            <Label layoutX="14.0" layoutY="-15.0" prefHeight="154.0" prefWidth="392.0" style="-fx-font-size: 70px; -fx-font-weight: bold; -fx-text-fill: #fff;" text="Users">
                <font>
                    <Font name="Bebas Neue Regular" size="12.0" />
                </font></Label>

            <!-- Table -->
            <TableView fx:id="tableView" fixedCellSize="0.0" layoutX="1.0" layoutY="107.0" prefHeight="494.0" prefWidth="950.0" style="-fx-background-color: #333; -fx-text-fill: white;"> <!-- Dark table background -->
                <columns>
                    <TableColumn fx:id="id" text="ID" />
                    <TableColumn fx:id="nom" text="Nom" />
                    <TableColumn fx:id="prenom" text="Prenom" />
                    <TableColumn fx:id="email" text="Email" />
                    <TableColumn fx:id="statut" text="Statut" />
                    <TableColumn fx:id="phone" text="Phone" />
                    <TableColumn fx:id="privileges" text="Privileges" />
                    <TableColumn fx:id="fidelityPoints" text="Fidelity Points" />
                    <TableColumn fx:id="departement" text="Departement" />
                </columns>
            </TableView>

            <!-- Buttons with Unified Design and Hover Effects -->
            <Button fx:id="btnDelete" layoutX="618.0" layoutY="618.0" onAction="#supp" prefHeight="58.0" prefWidth="201.0" style="-fx-background-color: #6a0dad; -fx-text-fill: white; -fx-font-weight: bold;" text="Supprimer">
                <style>
                    .button:hover {
                    -fx-background-color: #5c0a9e;
                    -fx-scale-x: 1.1;
                    -fx-scale-y: 1.1;
                    }
                </style>
            </Button>

            <Button fx:id="addUserButton" layoutX="114.0" layoutY="617.0" onAction="#onAddUserClick" prefHeight="58.0" prefWidth="201.0" style="-fx-background-color: #6a0dad; -fx-text-fill: white; -fx-font-weight: bold;" text="Add User">
                <style>
                    .button:hover {
                    -fx-background-color: #5c0a9e;
                    -fx-scale-x: 1.1;
                    -fx-scale-y: 1.1;
                    }
                </style>
            </Button>

            <Button fx:id="updateUserButton" layoutX="366.0" layoutY="618.0" onAction="#onUpdateUserClick" prefHeight="58.0" prefWidth="201.0" style="-fx-background-color: #6a0dad; -fx-text-fill: white; -fx-font-weight: bold;" text="Update User">
                <style>
                    .button:hover {
                    -fx-background-color: #5c0a9e;
                    -fx-scale-x: 1.1;
                    -fx-scale-y: 1.1;
                    }
                </style>
            </Button>
        </AnchorPane>
    </center>
</BorderPane>
